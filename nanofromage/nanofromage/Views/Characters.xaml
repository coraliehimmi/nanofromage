<Page x:Class="nanofromage.Views.Characters"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:nanofromage.Views"
      xmlns:uc="clr-namespace:nanofromage.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Characters"
      Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <uc:UserUserControl x:Name="XAMLUserUserControl" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="6" Background="Salmon"/>
        <uc:CharacterUserControl x:Name="XAMLCharacterUserControl" Grid.Column="1" Grid.Row="2" Grid.RowSpan="5" Background="Salmon"/>
        <uc:UserUserControl x:Name="XAMLUserUserControl2" Grid.Column="0" Grid.Row="14" Grid.ColumnSpan="6" Background="Salmon"/>
        <Label Content="Description" Background="Beige" FontSize="40" Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="4" Grid.RowSpan="3" BorderThickness="3" BorderBrush="Black"/>
        <Label Content="Classe" FontSize="50" Grid.Column="3" Grid.Row="5" Grid.RowSpan="2" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Beige"/>
        <uc:NameUserControl x:Name="XAMLNameUserControl" Grid.Column="3" Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
        <uc:ConfirmUserControl x:Name="XAMLConfirmUserControl" Grid.Column="2" Grid.Row="12" Grid.ColumnSpan="2"/>
    </Grid>
</Page>
