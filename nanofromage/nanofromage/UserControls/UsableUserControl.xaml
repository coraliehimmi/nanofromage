<UserControl x:Class="nanofromage.UserControls.UsableUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:nanofromage.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="900">
    <Grid Background="LightBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="myUsable" Content="Les équipements de ma ceinture" Grid.ColumnSpan="3"></Label>
        <Button x:Name="usable1" Content="1er item" Grid.Row="1"></Button>
        <Button x:Name="usable2" Content="2ème item" Grid.Row="1" Grid.Column="1"></Button>
        <Button x:Name="usable3" Content="3ème item" Grid.Row="1" Grid.Column="2"></Button>
        <Image x:Name="imgPotion1" Grid.Row="2"/>
        <Image x:Name="imgPotion2" Grid.Row="2" Grid.Column="1"/>
        <Image x:Name="imgPotion3" Grid.Row="2" Grid.Column="2"/>
    </Grid>
</UserControl>
