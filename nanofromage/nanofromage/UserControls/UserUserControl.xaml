<Page x:Class="nanofromage.UserControls.UserUserControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:nanofromage.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="180" d:DesignWidth="320"
      Title="UserUserControl"
      Background="SaddleBrown">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Grid.Column="1" Grid.RowSpan="4"/>
        <TextBox Name="stats" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="4" TextWrapping="Wrap" Text="TextBox"/>
    </Grid>
</Page>
